                android:theme="@style/radioButtonStyle" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_distance"
            android:layout_marginLeft="@dimen/normal_distance"
            android:layout_marginRight="@dimen/normal_distance"
            android:layout_marginTop="@dimen/small_distance"
            android:lineSpacingExtra="@dimen/lineSpacing"
            android:text="@string/question6"
            android:textSize="@dimen/normalTextSize" />

        <CheckBox
            android:id="@+id/question6_answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_distance"
            android:text="@string/question6answer1"
            android:textColor="@color/answerColor"
            android:textSize="@dimen/normalTextSize"
            android:theme="@style/checkBoxStyle" />

        <CheckBox
            android:id="@+id/question6_answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_distance"
            android:text="@string/question6answer2"
            android:textColor="@color/answerColor"
            android:textSize="@dimen/normalTextSize"
            android:theme="@style/checkBoxStyle" />

        <CheckBox
            android:id="@+id/question6_answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_distance"
            android:text="@string/question6answer3"
            android:textColor="@color/answerColor"
            android:textSize="@dimen/normalTextSize"
            android:theme="@style/checkBoxStyle" />

        <CheckBox
            android:id="@+id/question6_answer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_distance"
            android:text="@string/question6answer4"
            android:textColor="@color/answerColor"
            android:textSize="@dimen/normalTextSize"
            android:theme="@style/checkBoxStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_distance"
            android:layout_marginLeft="@dimen/normal_distance"
            android:layout_marginRight="@dimen/normal_distance"
            android:layout_marginTop="@dimen/small_distance"
            android:lineSpacingExtra="@dimen/lineSpacing"
            android:text="@string/question7"
            android:textSize="@dimen/normalTextSize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/moonHeight"
            android:contentDescription="@string/moon1"
            android:cropToPadding="true"
            android:padding="@dimen/small_distance"
            android:src="@drawable/callisto" />

        <RadioButton
            android:id="@+id/question7_answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/radioButtonStyle" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/moonHeight"
            android:contentDescription="@string/moon2"
            android:cropToPadding="true"
            android:padding="@dimen/small_distance"
            android:src="@drawable/ganymede_by_noaa" />

        <RadioButton
            android:id="@+id/question7_answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/radioButtonStyle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/moonHeight"
            android:contentDescription="@string/moon3"
            android:cropToPadding="true"
            android:padding="@dimen/small_distance"
            android:src="@drawable/mimas_cassini"
            android:theme="@style/radioButtonStyle" />

        <RadioButton
            android:id="@+id/question7_answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/radioButtonStyle" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_distance"
            android:layout_marginLeft="@dimen/normal_distance"
            android:layout_marginRight="@dimen/normal_distance"
            android:layout_marginTop="@dimen/small_distance"
