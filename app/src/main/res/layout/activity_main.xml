            android:id="@+id/question8_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_distance"
            android:hint="@string/lander_name"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="@color/answerColor"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/normalTextSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_distance"
            android:layout_marginLeft="@dimen/normal_distance"
            android:layout_marginRight="@dimen/normal_distance"
            android:layout_marginTop="@dimen/small_distance"
            android:lineSpacingExtra="@dimen/lineSpacing"
            android:text="@string/question9"
            android:textSize="@dimen/normalTextSize" />

        <RadioGroup
            android:id="@+id/question9_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_distance"
            android:layout_marginLeft="@dimen/normal_distance"
            android:layout_marginRight="@dimen/normal_distance"
            android:layout_marginTop="@dimen/small_distance">

            <RadioButton
                android:id="@+id/question9_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/questionanswer1"
                android:textColor="@color/answerColor"
                android:theme="@style/radioButtonStyle" />

            <RadioButton
                android:id="@+id/question9_answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question9answer2"
                android:textColor="@color/answerColor"
                android:theme="@style/radioButtonStyle" />

            <RadioButton
                android:id="@+id/question9_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question9answer3"
                android:textColor="@color/answerColor"
                android:theme="@style/radioButtonStyle" />

            <RadioButton
                android:id="@+id/question9_answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question9answer4"
                android:textColor="@color/answerColor"
                android:theme="@style/radioButtonStyle" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_distance"
            android:layout_marginLeft="@dimen/normal_distance"
            android:layout_marginRight="@dimen/normal_distance"
            android:layout_marginTop="@dimen/small_distance"
            android:lineSpacingExtra="@dimen/lineSpacing"
            android:text="@string/question10"
            android:textSize="@dimen/normalTextSize" />

        <RadioGroup
            android:id="@+id/question10_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_distance"
            android:layout_marginLeft="@dimen/normal_distance"
            android:layout_marginRight="@dimen/normal_distance"
            android:layout_marginTop="@dimen/small_distance">

            <RadioButton
                android:id="@+id/question10_answer1"
                android:layout_width="wrap_content"
